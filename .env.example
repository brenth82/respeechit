# Required: OpenAI API key for speech generation
OPENAI_API_KEY=your_openai_api_key_here

# Required for authentication: Secret key for session encryption
SESSION_SECRET=your_session_secret_here

# Enable or disable authentication (true/false)
ENABLE_AUTH=true

# Credentials for authentication (required if ENABLE_AUTH=true)
APP_USERNAME=admin
APP_PASSWORD=password

# Directory for temporary files and generated audio
WRITABLE_DIR=/tmp

# Timeout for OpenAI API requests in milliseconds
OPENAI_API_TIMEOUT=30000

# Port for the web server (default: 3000)
PORT=3000

# Optional: Redis URL for session storage (if not provided, in-memory storage will be used)
REDIS_URL=your_managed_redis_url_here # Example: redis://<username>:<password>@<host>:<port>
